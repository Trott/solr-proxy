{
  "name": "solr-proxy",
  "description": "Reverse proxy to secure Solr, rejecting requests that might modify the Solr index.",
  "keywords": [
    "solr",
    "security",
    "ajax-solr",
    "proxy"
  ],
  "version": "9.1.0",
  "author": "Rich Trott <rtrott@gmail.com>",
  "bugs": {
    "url": "https://github.com/Trott/solr-proxy/issues"
  },
  "main": "index.js",
  "scripts": {
    "test": "tsc && ts-standard -p tsconfig.json && c8 --100 mocha test"
  },
  "type": "module",
  "bin": {
    "solr-proxy": "bin/solr-proxy.js"
  },
  "files": [
    "bin/solr-proxy.js",
    "index.d.ts",
    "index.js",
    "lib/cli/argv.js"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/Trott/solr-proxy.git"
  },
  "dependencies": {
    "@fastify/http-proxy": "^8.0.1",
    "fastify": "^4.0.0",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.7.1",
    "@types/ws": "^8.5.3",
    "c8": "^7.11.0",
    "mocha": "^10.0.0",
    "semantic-release": "^20.0.2",
    "ts-standard": "^12.0.0",
    "typescript": "^5.0.2"
  },
  "ts-standard": {
    "ignore": [
      "**/*.js",
      "**/*.d.ts"
    ]
  },
  "engines": {
    "node": ">=14.8"
  },
  "license": "MIT",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
